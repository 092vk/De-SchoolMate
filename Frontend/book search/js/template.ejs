<div class="col-lg-6">
  <div class="card" style="">
    <div class="row no-gutters">
      <div class="col-md-4"> <img src="<%= bookImg %>" class="card-img" alt="...">
        <!-- This code displays the book cover image --> </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <%= title %>
          </h5> <!-- This code displays the book title -->
          <p class="card-text">Author: <%= author %>
          </p> <!-- This code displays the book author -->
          <p class="card-text"><small class="text-muted">Publisher: <%= publisher %></small></p>
          <!-- This code displays the book publisher -->
        </div>
      </div>
    </div>
  </div>
</div>